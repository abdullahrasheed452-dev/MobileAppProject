<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

  
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="45dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        
        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/instacam"
            android:contentDescription="@null" />

        
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Socially"
            android:textColor="#8B3E3E"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp" />

        
        <ImageView
            android:id="@+id/ivRight"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/igshare"
            android:contentDescription="@null" />

        
        <ImageView
            android:id="@+id/igTv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivRight"
            android:layout_marginEnd="12dp"
            android:src="@drawable/igtv"
            android:contentDescription="@null" />
    </RelativeLayout>

    
    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topBar"
        android:background="#EEEEEE" />

   
    <HorizontalScrollView
        android:id="@+id/storiesScroll"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_below="@id/dividerTop"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/stories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">

           
            <RelativeLayout
                android:id="@+id/story1"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story1Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story1Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic1"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/story1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story1Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>

            
            <RelativeLayout
                android:id="@+id/story2"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story2Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story2Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic2"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story2Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="karenne"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>

            
            <RelativeLayout
                android:id="@+id/story3"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story3Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story3Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic3"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story3Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="zackjohn"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>

            
            <RelativeLayout
                android:id="@+id/story4"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story4Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story4Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic4"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story4Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="chris"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>

            
            <RelativeLayout
                android:id="@+id/story5"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story5Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story5Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic5"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story5Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="kim"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>

            
            <RelativeLayout
                android:id="@+id/story6"
                android:layout_width="72dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/story6Ring"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ring"
                    android:contentDescription="@null" />

                <ImageView
                    android:id="@+id/story6Avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerInParent="true"
                    android:translationY="-11dp"
                    android:src="@drawable/pic6"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/story6Ring"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="kang"
                    android:textSize="12sp"
                    android:textColor="#8B8B8B" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    
    <View
        android:id="@+id/dividerStories"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/storiesScroll"
        android:background="#EEEEEE" />

    
    <ScrollView
        android:id="@+id/postScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dividerStories"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/postAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/joshua"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_white_background"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/postAvatar"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="joshua_l"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textColor="#989898"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/postMore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dots"
                    android:contentDescription="@null" />
            </RelativeLayout>

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <ImageView
                    android:id="@+id/postPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tokyo" />

               
                <TextView
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="1/3"
                    android:textColor="@android:color/white"
                    android:background="@drawable/photonum"
                    android:backgroundTint="#8B3E3E" />
            </RelativeLayout>

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/like" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/comment" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/share" />
                </LinearLayout>

                
                <ImageView
                    android:id="@+id/pageIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pageno"
                    android:contentDescription="@null" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/save" />
            </RelativeLayout>

          
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginTop="8dp"
                android:text="Liked by craig_love and 44,686 others"
                android:textSize="13sp"
                android:textColor="#111111" />

         
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="40dp"
                android:text="joshua_l  The game in Japan was amazing and I want to share some photos"
                android:textSize="13sp"
                android:textColor="#333333" />
        </LinearLayout>
    </ScrollView>

    
    <RelativeLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tab"
            android:scaleType="fitXY"
            android:contentDescription="@null" />
    </RelativeLayout>

   
    <View
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="#8B3E3E" />

</RelativeLayout>
