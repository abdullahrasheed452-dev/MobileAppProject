<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:translationY="-90dp"
        android:background="@drawable/plants_round"
        android:clipToOutline="true"
        android:src="@drawable/plants" />

    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:gravity="bottom"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rowButtons"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnGallery"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="22dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gallery" />

            <ImageView
                android:id="@+id/btnFlash"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/flash"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/btnShutter"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="45dp"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="@null"
                android:src="@drawable/no_bg"
                />


            <ImageView
                android:id="@+id/btnSwitch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="22dp"
                android:src="@drawable/switchcam"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/btnFace"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/smile2"
                android:contentDescription="@null" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/modeStripScroll"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="20dp"
           android:layout_marginStart="50dp"

            >

            <LinearLayout
                android:id="@+id/modeStrip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TYPE"
                    android:textSize="12sp"
                    android:textColor="#7D4C4C"
                    android:layout_marginEnd="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIVE"
                    android:textSize="12sp"
                    android:textColor="#7D4C4C"
                    android:layout_marginEnd="18dp" />

                <TextView
                    android:id="@+id/modeNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NORMAL"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#D46B6B"
                    android:layout_marginEnd="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOMERANG"
                    android:textSize="12sp"
                    android:textColor="#7D4C4C"
                    android:layout_marginEnd="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPERZOOM"
                    android:textSize="12sp"
                    android:textColor="#7D4C4C" />
            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>

    <ImageView
        android:id="@+id/homeIndicator"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/bar"
        android:contentDescription="@null" />
</RelativeLayout>
