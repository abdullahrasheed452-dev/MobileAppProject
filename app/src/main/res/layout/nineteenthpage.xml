<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="25dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/bg_card_rounded"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bird"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/top_tools"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/brownclose"/>

            <Space
                android:layout_width="80dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/partnership" />

            <Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/aa" />

            <Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/brownst" />

            <Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/brownmusic" />

            <Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/filters" />

            <Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:padding="8dp"
                android:src="@drawable/more2" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="14dp"
        android:padding="12dp"
        android:background="@drawable/bg_bottom_panel"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn_your_story"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_pill"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/badge_circle"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/g" />

                <TextView
                    android:id="@+id/label_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Your stories"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>



        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:id="@+id/btn_close_friends"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_pill"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/dot_green"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/label_close_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Close Friends"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>


        <Space
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_tan"
            android:padding="12dp"
            android:src="@drawable/next" />
    </LinearLayout>

</RelativeLayout>
