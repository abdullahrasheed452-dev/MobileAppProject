<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/topTabs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tabFollowing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Following"
            android:textColor="#8B3E3E"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/tabYou"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="You"
                android:textColor="#8B3E3E"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp" />

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#C35151" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/topTabs"
        android:background="#EEEEEE" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:layout_below="@id/dividerTop"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/followRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:text="Follow Requests"
                android:textColor="#C35151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:lineSpacingExtra="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/newAvatar1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/p2" />

                <ImageView
                    android:id="@+id/newThumb1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/idk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/newAvatar1"
                    android:layout_toStartOf="@id/newThumb1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="karennne liked your photo."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="1h"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:lineSpacingExtra="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="6dp">

                <ImageView
                    android:id="@+id/todayAvatar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/pwow" />

                <ImageView
                    android:id="@+id/todayThumb"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/idk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/todayAvatar"
                    android:layout_toStartOf="@id/todayThumb"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="kiero_d, zackjohn and 26 others\nliked your photo."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="3h"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="12sp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:lineSpacingExtra="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/weekAvatar1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/craig" />

                <ImageView
                    android:id="@+id/weekThumb1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/idk2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/weekAvatar1"
                    android:layout_toStartOf="@id/weekThumb1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="4dp"
                            android:maxLines="2"
                            android:text="craig_love mentioned you in a\ncomment: @jacob_w exactly.."
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="2d"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reply"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:paddingTop="6dp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/weekAvatar2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/martini" />

                <TextView
                    android:id="@+id/btnMsg1"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/curved_border_white"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/weekAvatar2"
                    android:layout_toStartOf="@id/btnMsg1"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="martini_rond started\nfollowing you."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="3d"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/weekAvatar3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/max" />

                <TextView
                    android:id="@+id/btnMsg2"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/curved_border_white"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/weekAvatar3"
                    android:layout_toStartOf="@id/btnMsg2"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="maxjacobson started\nfollowing you."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="3d"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/weekAvatar4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/potter" />

                <TextView
                    android:id="@+id/btnFollow"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/curved_border"
                    android:backgroundTint="#2196F3"
                    android:gravity="center"
                    android:text="Follow"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/weekAvatar4"
                    android:layout_toStartOf="@id/btnFollow"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="mis_potter started following\nyou."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="3d"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/thisMonthTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:text="This Month"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/monthAvatar3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/p4" />

                <TextView
                    android:id="@+id/btnMsgMonth"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/curved_border_white"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/monthAvatar3"
                    android:layout_toStartOf="@id/btnMsgMonth"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="lukedamant started\nfollowing you."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:text="3d"
                            android:textColor="#9E9E9E"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tab" />
    </RelativeLayout>

</RelativeLayout>
