<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/left"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_marginEnd="28dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create An Account and Sign Up"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_below="@id/headerRow"
        android:layout_marginBottom="16dp" />


    <RelativeLayout
        android:id="@+id/rlAvatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle_white_background"
        android:layout_below="@id/tvSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logincam"
            android:contentDescription="@null" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlAvatar"
        android:layout_above="@+id/btnCreateAccount"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="8dp">

            <!-- Username -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:text="tejpatil064"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:fontFamily="@font/poppins_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="14dp" />

            <!-- First Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:text="Tejas"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:fontFamily="@font/poppins_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="14dp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Last Name"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:text="Patil"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:fontFamily="@font/poppins_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="14dp" />

            <!-- Date of Birth -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <EditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:text="02 - 09 - 2003"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:inputType="date" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="14dp" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:hint="Enter E-mail"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_marginBottom="14dp" />

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="6dp" />

                <RelativeLayout
                    android:id="@+id/passwordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:paddingEnd="44dp"
                        android:inputType="textPassword"
                        android:textColor="@android:color/white"
                        android:textColorHint="#80FFFFFF"
                        android:fontFamily="@font/poppins_regular"
                        android:text="••••••••" />

                    <ImageView
                        android:id="@+id/ivTogglePassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/eye"
                        android:padding="4dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/passwordUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:background="#FFFFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>








    <TextView
        android:id="@+id/btnCreateAccount"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:text="Create an Account"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/curved_border"
        android:layout_above="@+id/homeIndicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="true" />




    <View
        android:id="@+id/homeIndicator"
        android:layout_width="134dp"
        android:layout_height="4dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

</RelativeLayout>
